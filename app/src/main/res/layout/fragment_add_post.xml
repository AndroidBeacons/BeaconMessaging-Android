
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
android:layout_height="wrap_content"
tools:context="com.yahoo.beaconmessaging.fragment.AddPostFragment">

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/ivCurrentUserProfile"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/ivCurrentUserProfile"
    android:id="@+id/tvUser"
    android:paddingTop="16dp" />

<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etPost"
    android:textSize="12sp"
    android:maxLines="4"
    android:inputType="textMultiLine"
    android:hint="@string/hint_enter_post"
    android:layout_below="@+id/ivCurrentUserProfile"
    android:layout_centerHorizontal="true"
    android:lines="6"
    android:linksClickable="false"
    android:gravity="top|left"
    android:singleLine="false" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_cancel"
    android:id="@+id/btnCancel"
    android:layout_below="@+id/etPost"
    android:background="@drawable/shape_fancy_button"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_post"
    android:id="@+id/btnPost"
    android:background="@drawable/shape_fancy_button"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_below="@+id/etPost"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>
