<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rlCardWrapper">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nature Painting"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/tvName"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llCardContent"
                android:layout_below="@id/tvName"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/nature"
                    android:id="@+id/ivExhibitImage"
                    android:scaleType="fitXY"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Material Design is stunning!!! Be sure to checkout the other pictures which are in the muesuem.Sometimes you might never know what you can even find okay :)"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:maxLines="3"
                    android:id="@+id/tvDescription"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="20"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/llCardContent"
                android:id="@+id/tvFavoriteCount"
                />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Favorites"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/llCardContent"
                android:layout_toRightOf="@+id/tvFavoriteCount"
                android:id="@+id/tvFavorites"
                />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="55"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tvFavorites"
                android:layout_below="@+id/llCardContent"
                android:id="@+id/tvPostCount"
                />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Comments"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tvPostCount"
                android:layout_below="@+id/llCardContent"
                android:id="@+id/tvPost"
                />
            
        </RelativeLayout>
        
       
    </android.support.v7.widget.CardView>
</RelativeLayout>